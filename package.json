{
  "name": "minium",
  "version": "0.1.0",
  "description": "Cross-platform Electron-based budgeting tool",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "build:main": "NODE_ENV=development webpack --config webpack.config.main.babel.js",
    "build:preload": "NODE_ENV=development webpack --config webpack.config.preload.babel.js",
    "clean:build": "rimraf build",
    "electron": "electron build",
    "lint": "eslint \"src/**/*.@(j|t)s?(x)\"",
    "postinstall": "npm rebuild zeromq --runtime=electron && electron-rebuild",
    "prebuild": "npm run clean:build",
    "prebuild:main": "npm run clean:build",
    "preelectron": "run-p -n build:*",
    "start": "run-p -nr watch:* electron",
    "test": "jest",
    "typings": "tsc",
    "watch:renderer": "NODE_ENV=development webpack-dev-server --config webpack.config.renderer.babel.js",
    "watch:server": "NODE_ENV=development webpack-dev-server --config webpack.config.server.babel.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dilatorily/minium.git"
  },
  "keywords": [
    "electron",
    "budgeting",
    "react",
    "redux",
    "windows",
    "macos",
    "linux"
  ],
  "author": "Huy Dang Lê-Ngô",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dilatorily/minium/issues"
  },
  "homepage": "https://github.com/Dilatorily/minium#readme",
  "dependencies": {
    "core-js": "3.9.1",
    "electron": "11.3.0",
    "get-port": "5.1.1",
    "keytar": "7.4.0",
    "plaid": "8.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "regenerator-runtime": "0.13.7",
    "zeromq": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@babel/register": "7.13.8",
    "@commitlint/config-conventional": "12.0.1",
    "@hot-loader/react-dom": "17.0.1",
    "@jest/globals": "26.6.2",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/zeromq": "4.6.3",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "commitlint": "12.0.1",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "3.1.1",
    "electron-rebuild": "2.3.5",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "3.10.1",
    "html-webpack-plugin": "4.5.2",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "node-loader": "1.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react-hot-loader": "4.13.0",
    "rimraf": "3.0.2",
    "typescript": "4.2.3",
    "webpack": "4.44.2",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2"
  }
}
