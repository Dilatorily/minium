{
  "name": "minium",
  "version": "0.1.0",
  "description": "Cross-platform Electron-based budgeting tool",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "build:main": "NODE_ENV=development webpack --config webpack.config.main.babel.js",
    "build:preload": "NODE_ENV=development webpack --config webpack.config.preload.babel.js",
    "clean:build": "rimraf build",
    "coverage": "codecov",
    "electron": "electron build",
    "lint": "eslint \"src/**/*.@(j|t)s?(x)\"",
    "postinstall": "npm rebuild zeromq --runtime=electron && electron-rebuild",
    "prebuild": "npm run clean:build",
    "prebuild:main": "npm run clean:build",
    "preelectron": "run-p -n build:*",
    "start": "run-p -nr watch:* electron",
    "test": "jest",
    "typings": "tsc",
    "watch:renderer": "NODE_ENV=development webpack-dev-server --config webpack.config.renderer.babel.js",
    "watch:server": "NODE_ENV=development webpack-dev-server --config webpack.config.server.babel.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dilatorily/minium.git"
  },
  "keywords": [
    "electron",
    "budgeting",
    "react",
    "redux",
    "windows",
    "macos",
    "linux"
  ],
  "author": "Huy Dang Lê-Ngô",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dilatorily/minium/issues"
  },
  "homepage": "https://github.com/Dilatorily/minium#readme",
  "dependencies": {
    "core-js": "3.6.5",
    "electron": "8.2.2",
    "get-port": "5.1.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "regenerator-runtime": "0.13.5",
    "zeromq": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@babel/register": "7.9.0",
    "@commitlint/config-conventional": "8.3.4",
    "@hot-loader/react-dom": "16.13.0",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.2",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "25.2.1",
    "@types/node": "12.12.2",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/zeromq": "4.6.3",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "codecov": "3.6.5",
    "commitlint": "8.3.5",
    "electron-debug": "3.0.1",
    "electron-devtools-installer": "3.0.0",
    "electron-rebuild": "1.10.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "eslint-plugin-testing-library": "3.0.3",
    "html-webpack-plugin": "4.2.0",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "lint-staged": "10.1.3",
    "node-loader": "0.6.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "react-hot-loader": "4.12.20",
    "rimraf": "3.0.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  }
}
